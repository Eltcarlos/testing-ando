generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client-onboarding"
}

datasource db {
  provider = "mongodb"
  url      = env("CLIENT_DATABASE_URL")
}

model InitialQuestionsOnboarding {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  question_id String   @unique
  step_number Int
  title       String
  subtitle    String?
  type        String
  required    Boolean  @default(true)
  multiline   Boolean  @default(false)
  max_length  Int?
  placeholder String?
  options     Json?
  active      Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@index([step_number])
  @@map("initial_questions_onboarding")
}
